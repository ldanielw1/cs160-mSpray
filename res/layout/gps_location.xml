<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/gps_location_button_back"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/back" 
        android:layout_marginLeft = "20dp"
        android:layout_marginBottom = "20dp"
        />

    <Button
        android:id="@+id/gps_location_button_confirm"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/confirm"
        android:layout_marginRight = "20dp"
        android:layout_marginBottom = "20dp" />

    <TextView
        android:id="@+id/gps_location_textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:textSize = "26dp"
        android:textStyle = "bold"
        android:text="@string/gps_location" />

    <TextView
        android:id="@+id/gps_location_textview_location_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gps_location_textview_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:text="@string/location_found" 
        android:textSize = "20dp"/>

</RelativeLayout>