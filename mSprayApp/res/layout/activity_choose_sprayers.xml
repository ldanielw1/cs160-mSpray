<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/choose_sprayers_wrapper"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/darkgray"
    android:orientation="vertical"
    android:screenOrientation="portrait" >

    <LinearLayout
        android:id="@+id/activity_choose_sprayers_1_fake_button"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0.5"
        android:background="@drawable/button_selector_green"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/activity_choose_sprayer_imageView"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:clickable="false"
            android:contentDescription="@string/oneSprayer"
            android:padding="18dp"
            android:src="@drawable/sprayworker" />

        <TextView
            android:id="@+id/activity_choose_sprayer_textView"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:clickable="false"
            android:gravity="center"
            android:lines="1"
            android:padding="2dp"
            android:text="@string/oneSprayer"
            android:textColor="#fff"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_choose_sprayers_2_fake_button"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_weight="0.5"
        android:background="@drawable/button_selector_blue"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/activity_choose_sprayer2_imageView"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:clickable="false"
            android:contentDescription="@string/twoSprayers"
            android:padding="18dp"
            android:src="@drawable/sprayworker2" />

        <TextView
            android:id="@+id/activity_choose_sprayer2_textView"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:clickable="false"
            android:gravity="center"
            android:lines="1"
            android:padding="2dp"
            android:text="@string/twoSprayers"
            android:textColor="#fff"
            android:textSize="30sp" />
    </LinearLayout>

</LinearLayout>